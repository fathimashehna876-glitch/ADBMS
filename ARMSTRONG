SQL> DECLARE
  2  N NUMBER:=&N;
  3  SUMS NUMBER:=0;
  4  REM NUMBER;
  5  TEMP NUMBER:=N;
  6  BEGIN
  7  WHILE N>0 LOOP
  8  REM:=MOD(N,10);
  9  SUMS:=SUMS+REM*REM*REM;
 10  N:=TRUNC(N/10);
 11  END LOOP;
 12  IF SUMS= TEMP THEN
 13  DBMS_OUTPUT.PUT_LINE(TEMP||'IS ARMSTRONG');
 14  ELSE
 15  DBMS_OUTPUT.PUT_LINE(TEMP||'IS NOT ARMSTRONG');
 16  END IF;
 17  END;
